<template>
  <view class="tabs">
    <scroll-view id="tab-bar"
                 class="scroll-h"
                 :scroll-x="true"
                 :show-scrollbar="false"
                 :scroll-into-view="scrollInto">
      <view
          v-for="(tab,index) in tabBars"
          :key="tab.id" class="uni-tab-item"
          :id="tab.id" :data-current="index"
          @click="ontabtap">
        <text class="uni-tab-item-title" :class="tabIndex==index ? 'uni-tab-item-title-active' : ''">{{tab.name}}</text>
      </view>
    </scroll-view>
    <view class="line-h"></view>
    <swiper :current="tabIndex"
            class="swiper-box"
            style="flex: 1;"
            :duration="300" @change="ontabchange">
      <swiper-item
          class="swiper-item"
          v-for="(tab,index1) in examList"
          :key="index1">
        <!-- #ifdef APP-NVUE -->
        <list class="scroll-v list"
              enableBackToTop="true"
              scroll-y loadmoreoffset="15"
              @loadmore="loadMore(index1)">
          <refresh
              class="refresh"
              @refresh="onrefresh(index1)"
              @pullingdown="onpullingdown"
              :display="tab.refreshing ? 'show' : 'hide'">

            <div class="refresh-view">
              <image class="refresh-icon"
                     :src="refreshIcon"
                     :style="{width: (tab.refreshing || pulling) ? 0: '30px'}"
                     :class="{'refresh-icon-active': tab.refreshFlag}"></image>
              <loading-indicator
                  class="loading-icon"
                  animating="true"
                  v-if="tab.refreshing"></loading-indicator>
              <text class="loading-text">{{tab.refreshText}}</text>
            </div>
          </refresh>

          <cell class="loading-more"
                v-if="tab.isLoading || tab.data.length > 4">
            <text class="loading-more-text">{{tab.loadingText}}</text>
          </cell>
        </list>
        <!-- #endif -->
        <!-- #ifndef APP-NVUE -->
        <scroll-view class="scroll-v list"
                     enableBackToTop="true"
                     scroll-y
                     @scrolltolower="loadMore(index1)">
		  <view v-if="tab.data.length === 0">
		      <luanqing-empty :show="true" text="没有更多数据啦" textColor="#000"></luanqing-empty>
		  </view>
		  
		  <view v-else v-for="(newsitem, index2) in tab.data" :key="newsitem.id">
		    <media-item
		        :options="newsitem" ></media-item>
		  </view> 
          <view class="loading-more" v-if="tab.isLoading || tab.data.length > 4">
            <text class="loading-more-text">{{tab.loadingText}}</text>
          </view>
        </scroll-view>
        <!-- #endif -->
      </swiper-item>
    </swiper>
  </view>
</template>
<script>
import mediaItem from './news-item.nvue';
import httpApi from '@/api/http'
import luanqingEmpty from '@/components/luanqing-empty/luanqing-empty.vue';
// 缓存每页最多
const MAX_CACHE_DATA = 100;
// 缓存页签数量
const MAX_CACHE_PAGE = 3;

export default {
  components: {
    mediaItem, luanqingEmpty
  },
  data() {
    return {
      isOnTabClick: false,
      pageNumber: 1,
      pageSize: 10,
      newsList: [],
      cacheTab: [],
      tabIndex: 0,
      tabBars: [],
      examList: [],
      scrollInto: "",
      showTips: false,
      navigateFlag: false,
      pulling: false,
      refreshIcon: "data:image/png;base64,"
    }
  },
  onLoad() {
    this.getExamSubjectList()
  },
  methods: {

    getExamSubjectList () {
      httpApi.get('/student/exam/subject')
          .then(res => {
            let result = res.data
            this.tabBars = result
            this.tabBars.forEach((tabBar) => {
              this.examList.push({
                data: [],
                isLoading: false,
                refreshText: "",
                loadingText: '加载更多...'
              })
            })
            this.getExamListBySubjectId(0)
          })
    },

    getExamListBySubjectId(index) {
      let subjectId = this.tabBars[index].id
      let activeTab = this.examList[index];
      this.getExamInfoList(subjectId).then(res => {
        if (res.length === 0) {
          activeTab.loadingText = '没有更多数据了'
        } else {
          activeTab.data = activeTab.data.concat(res)
        }
      })
    },

    getExamInfoList(subjectId) {
      return new Promise(resolve => {
        httpApi.get('/student/exam', {
          pageNumber: this.pageNumber,
          pageSize: this.pageSize,
          subjectId: subjectId
        }).then(res => {
              resolve(res.data.dataList)
            })
      })
    },

    goExamDetail (examInfo) {
        uni.navigateTo({
            url: '../paper/examDetail?examInfoId=' + examInfo.id
        })
    },


    close(index1, index2) {
      uni.showModal({
        content: '是否删除本条信息？',
        success: (res) => {
          if (res.confirm) {
            this.newsList[index1].data.splice(index2, 1);
          }
        }
      })
    },
    loadMore(e) {
      setTimeout(() => {
        this.pageNumber++
        this.getExamListBySubjectId(this.tabIndex);
      }, 200)
    },
    ontabtap(e) {
      this.isOnTabClick = true
      let index = e.target.dataset.current || e.currentTarget.dataset.current;
      this.switchTab(index);
      setTimeout(() => {
        this.isOnTabClick = false
      }, 100)
    },
    ontabchange(e) {
      if (this.isOnTabClick) {
        return false
      }
      let index = e.target.current || e.detail.current;
      this.switchTab(index);
    },
    switchTab(index) {
      if (this.tabIndex === index) {
        return;
      }

      if (this.examList[index].data.length === 0) {
        this.getExamListBySubjectId(index);
      }

      // 缓存 tabId
      if (this.examList[this.tabIndex].data.length > MAX_CACHE_DATA) {
        let isExist = this.cacheTab.indexOf(this.tabIndex);
        if (isExist < 0) {
          this.cacheTab.push(this.tabIndex);
          //console.log("cache index:: " + this.tabIndex);
        }
      }

      this.tabIndex = index;
      // this.scrollInto = ''this.tabBars[index].id + '''';

      // 释放 tabId
      if (this.cacheTab.length > MAX_CACHE_PAGE) {
        let cacheIndex = this.cacheTab[0];
        this.clearTabData(cacheIndex);
        this.cacheTab.splice(0, 1);
        //console.log("remove cache index:: " + cacheIndex);
      }
    },
    clearTabData(e) {
      this.testPaperInfoList[e].data.length = 0;
      this.testPaperInfoList[e].loadingText = "加载更多...";
    },
    refreshData() {},
    onrefresh(e) {
      var tab = this.testPaperInfoList[this.tabIndex];
      if (!tab.refreshFlag) {
        return;
      }
      tab.refreshing = true;
      tab.refreshText = "正在刷新...";

      setTimeout(() => {
        this.refreshData();
        this.pulling = true;
        tab.refreshing = false;
        tab.refreshFlag = false;
        tab.refreshText = "已刷新";
        setTimeout(() => { // TODO fix ios和Android 动画时间相反问题
          this.pulling = false;
        }, 500);
      }, 2000);
    },
    onpullingdown(e) {
      var tab = this.testPaperInfoList[this.tabIndex];
      if (tab.refreshing || this.pulling) {
        return;
      }
      if (Math.abs(e.pullingDistance) > Math.abs(e.viewHeight)) {
        tab.refreshFlag = true;
        tab.refreshText = "释放立即刷新";
      } else {
        tab.refreshFlag = false;
        tab.refreshText = "下拉可以刷新";
      }
    },
    newGuid() {
      let s4 = function() {
        return (65536 * (1 + Math.random()) | 0).toString(16).substring(1);
      }
      return (s4() + s4() + "-" + s4() + "-4" + s4().substr(0, 3) + "-" + s4() + "-" + s4() + s4() + s4()).toUpperCase();
    }
  }
}
</script>

